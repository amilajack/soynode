{
  "name": "soynode",
  "description": "Utility for working with Closure Templates, aka Soy, from within a node.js application.",
  "license": "Apache-2.0",
  "author": "Daniel Pupius <dan@medium.com> (https://github.com/dpup)",
  "homepage": "https://github.com/Medium/soynode",
  "repository": {
    "type": "git",
    "url": "http://github.com/Medium/soynode.git"
  },
  "version": "2.1.0",
  "main": "./lib/soynode.js",
  "directories": {
    "lib": "./lib"
  },
  "scripts": {
    "build": "yarn run clean && babel './src' --out-dir './lib' --copy-files",
    "clean": "rimraf ./lib",
    "lint": "eslint './**/*.js'",
    "lint-fix": "yarn run lint --fix || :",
    "postlint-fix": "prettier --ignore-path .eslintignore --write './**/*.js'",
    "test": "mocha --require @babel/register test/test.js"
  },
  "dependencies": {
    "closure-templates": "^20160825.0.0",
    "fs-extra": "1.0.0",
    "google-closure-library": "^20180805.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-rc.3",
    "@babel/core": "^7.0.0-rc.3",
    "@babel/plugin-proposal-class-properties": "^7.0.0-rc.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-rc.3",
    "@babel/preset-env": "^7.0.0-rc.3",
    "@babel/preset-flow": "^7.0.0-rc.3",
    "@babel/register": "^7.0.0-rc.3",
    "babel-eslint": "^8.2.6",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-dynamic-import-node": "^2.0.0",
    "delay": "^3.1.0",
    "eslint": "^5.0.0-rc.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-mocha": "^5.2.0",
    "eslint-plugin-promise": "^4.0.0",
    "husky": "^1.0.0-rc.13",
    "lint-staged": "^7.2.2",
    "mocha": "^5.2.0",
    "prettier": "^1.14.2",
    "prettier-package-json": "^2.0.0",
    "yarn": "^1.9.4"
  },
  "keywords": [
    "closure",
    "node",
    "soy",
    "templates"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js,jsx}": [
        "eslint --fix",
        "prettier --ignore-path .eslintignore --write",
        "git add"
      ],
      "{*.json,.{babelrc,eslintrc,prettierrc}}": [
        "prettier --ignore-path .eslintignore --parser json --write",
        "git add"
      ],
      "*.{css,scss}": [
        "prettier --ignore-path .eslintignore --write",
        "git add"
      ],
      "*.{yml,less,md}": [
        "prettier --ignore-path .eslintignore --write",
        "git add"
      ],
      "package.json": [
        "prettier-package-json --write",
        "git add"
      ]
    }
  }
}
